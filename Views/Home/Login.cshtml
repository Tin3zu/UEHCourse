
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutUEH.cshtml";
}
@model UEHCourse.Models.Customer

<div class="container-wrap">
    <div class="row mt-5 mb-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"><i class="fas fa-sign-in-alt"></i>Login</h1>


               @using (Html.BeginForm("Login",null, FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="email">Email</label>
                        @Html.TextBoxFor(x => x.Clogin, new { @class = "form-control", type = "text", placeholder = "Tên đăng nhập", required = "required", autofocus = "autofocus" })
                    </div>
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        @Html.TextBoxFor(x => x.Cpassword, new { @class = "form-control", type = "password", placeholder = "Mật khẩu" })
                        <br>
                    </div>
                    <button type="submit" class="btn btn-danger btn-block"> Đăng Nhập</button>
                }
                <p style="text-align: center;">
                    or <a href="#" style="color:rgb(0,95,105);font-weight: bold;">Quên mật khẩu?</a>
                </p>
                <p class="lead mt-4" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                    Bạn chưa có tài khoản? <a href="#" style="color:rgb(0,95,105); font-weight: bold;">Đăng ký</a>
                </p>
            </div>
        </div>
    </div>
</div>
