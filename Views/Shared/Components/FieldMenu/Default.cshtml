@model IEnumerable<Field>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            <i class="fa fa-bars"></i>
            <span>Danh mục khóa học</span>
        </div>
        <ul>
            @foreach(var item in Model)
            {
                <li><a asp-controller="Home" asp-action="danhmuckhoahoc" asp-route-fieldid="@item.FieldId">@item.FieldName</a></li>
            }
           
        </ul>
    </div>
</div>