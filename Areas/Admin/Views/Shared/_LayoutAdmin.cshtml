    <script>
        const doughnutxValues = ["Tài chính & Kế toán", "CNTT & Phần mềm", "Kinh doanh", "Tài chính & nhân sự"];
        const doughnutyValues = [3, 3, 2, 2];
        const doughnutColors = [
            "#b91d47",
            "#00aba9",
            "#2b5797",
            "#e8c3b9"
        ];

        new Chart("doughnutchart", {
            type: "doughnut",
            data: {
                labels: doughnutxValues,
                datasets: [{
                    backgroundColor: doughnutColors,
                    data: doughnutyValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Thống kê lĩnh vực khóa học được sinh viên lựa chọn",
                    fontColor: "#015D68",
                    fontSize: 18
                }
            }
        });
    </script>


    <script>
        const xValues = ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6"];
        const yValues = [0, 3, 5, 0, 0, 0];
        const barColors = ["red", "green", "blue", "orange", "brown"];
        new Chart("bar-chart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: "Thống kê tỉ lệ sinh viên đăng ký khóa học qua mỗi tháng",
                    fontColor: "#015D68",
                    fontSize: 18
                }
            }
        });
    </script>


    <script>
        const linexValues = ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6"];
        const lineyValues = [0, 5047000, 5095000, 0, 0, 0];

        new Chart("line-chart", {
            type: "line",
            data: {
                labels: linexValues,
                datasets: [{
                    fill: false,
                    lineTension: 0,
                    backgroundColor: "rgba(0,0,255,1.0)",
                    borderColor: "rgba(0,0,255,0.1)",
                    data: lineyValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Thống kê doanh thu mỗi tháng",
                    fontColor: "#015D68",
                    fontSize: 18
                },
                legend: { display: false },
                scales: {
                    yAxes: [{ ticks: { min: 0, max: 6000000 } }],
                }

            }
        });
    </script>


    <script>
        const MultiplexValues = ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6"];

        new Chart("Multiple-Lines", {
            type: "line",
            data: {
                labels: MultiplexValues,
                datasets: [{
                    label: "Udemy",
                    data: [0, 8, 1, 0, 0, 0,],
                    borderColor: "red",
                    fill: false,
                }, {
                    label: "CBS",
                    data: [0, 0, 1, 0, 0, 0],
